---
import Icon from "astro-icon";

const team = [
  {
    name: "@kevinformatik",
    link: "https://x.com/kevinformatik",
    img: "https://pbs.twimg.com/profile_images/1695795656055554048/K-phlaYd_400x400.jpg",
    role: "CTO Dev & Funding",
  },
  {
    name: "@cubealgos",
    link: "https://x.com/cubealgos",
    img: "https://pbs.twimg.com/profile_images/1698721185930924032/H1Fzb0u3_400x400.jpg",
    role: "CTO Dev & Funding",
  },
  {
    name: "@wordedclown",
    link: "https://x.com/wordedclown",
    img: "https://pbs.twimg.com/profile_images/1517503777783390209/dCUOoL-r_400x400.jpg",
    role: "Community Mod & Funding",
  },
  {
    name: "@keenoshi",
    link: "https://x.com/keenoshi",
    img: "https://pbs.twimg.com/profile_images/1659210900354785285/1uR6FAB-_400x400.jpg",
    role: "Community Mod",
  },
];
---

<div class="bg-blue-400 py-32">
  <div class="mx-auto max-w-7xl px-6 text-center lg:px-8">
    <div class="mx-auto max-w-2xl">
      <h2 class="text-3xl font-bold tracking-tight text-slate-900 sm:text-4xl">
        CTO Team & Contributors
      </h2>
      <p class="mt-4 text-lg leading-8 text-slate-800">
        This project is made only possible by the support & effort of its
        community!
      </p>
    </div>
    <ul
      role="list"
      class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-4"
    >
      {
        team.map((item) => (
          <li class="m-12">
            <img class="mx-auto h-42 w-42 rounded-full" src={item.img} alt="" />
            <h3 class="mt-6 text-base font-semibold leading-7 tracking-tight text-slate-900">
              {item.name}
            </h3>
            <p class="text-sm leading-6 text-slate-800">{item.role}</p>
            <a href={item.link} class="mt-6 flex justify-center gap-x-6">
              <Icon
                name="simple-icons:twitter"
                class="w-4 h-auto text-black hover:text-slate-800"
              />
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
